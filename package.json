{
  "name": "@pr0gramm/fluester",
  "version": "0.3.12",
  "license": "MIT",
  "description": "Node.js bindings for OpenAI's Whisper. Optimized for CPU.",
  "homepage": "https://github.com/pr0gramm-com/fluester",
  "author": "pr0gramm.com developers",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "download-model": "dist/script/download.js",
    "compile-whisper": "dist/script/compile.js"
  },
  "scripts": {
    "start": "bun --watch src/index.ts",
    "build": "tsc",
    "build:docs": "typedoc --out docs src/index.ts",
    "ci": "biome ci src",
    "format": "biome format --write src",
    "lint": "biome lint src",
    "lint:apply": "biome lint --apply src",
    "test": "tsc && node --test dist/**/*.test.js",
    "test:ci": "tsc && node --test --test-reporter=tap --test-reporter-destination=test.tap dist/**/*.test.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@types/node": "^20.8.4",
    "bun": "^1.0.4",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pr0gramm-com/fluester.git"
  },
  "keywords": [
    "openai",
    "whisper",
    "c++",
    "whisper",
    "bindings",
    "transcript",
    "transcriber",
    "audio",
    "speech",
    "speech-to-Text",
    "stt",
    "tts",
    "srt",
    "diarization"
  ]
}
